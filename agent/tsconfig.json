{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "target": "ES2020",
        "lib": ["ES2020", "DOM"],
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "types": ["node", "better-sqlite3", "yargs"]
    },
    "include": ["src/**/*"]
}
